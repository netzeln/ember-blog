<form>
  <div class="form-group">
    <label for="title">Title</label>
  {{input value=title type="text" id="title" placeholder=blogpost.title}}
  </div>
  <div class="form-group">
    <label for="author">Author</label>
  {{input value=author type="text" id="author" placeholder=blogpost.author}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
  {{input value=date type="text" id="date" placeholder=blogpost.date}}
  </div>
  <div class="form-group">
    <label for="article">Article</label>
  {{textarea row=8 value=article type="text" id="article" placeholder=blogpost.article}}
  </div>
  <div class="form-group">
    <label for="category">Type</label>
  {{input value=category type="text" id="category" placeholder=blogpost.category}}
  </div>
  <button class="btn btn-success"{{action 'update' blogpost}}>Submit Edits</button>
</form>

<button class="btn btn-danger"{{action 'delete' blogpost}}>Delete this Post</button>
